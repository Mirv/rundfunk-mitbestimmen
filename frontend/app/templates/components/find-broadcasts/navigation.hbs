<div class="ui four item massive fluid secondary pointing stackable menu">
  <div class="item">
    {{#if canStepBackward}}
      <button class="ui left labeled icon button find-broadcasts-navigation-back" {{action 'back'}}>
        <i class="left arrow icon"></i>
        Back
      </button>
    {{else}}
      <button class="ui left labeled icon button disabled find-broadcasts-navigation-back">
        <i class="left arrow icon"></i>
        Back
      </button>
    {{/if}}
  </div>

  <div class="item">
    <div class="ui mini statistic">
      <div class="value">
        {{#if (gt recentPositives 0)}}
          <i class="small red heart icon"></i>
        {{else}}
          <i class="small heart icon"></i>
        {{/if}}
        {{recentPositives}}/{{recentNeutrals}}
      </div>
      <div class="label">
        Recently supported
      </div>
    </div>
  </div>

  <div class="item">
    {{#if (gt recentPositives 2)}}
      {{#link-to 'invoice' class='ui primary button find-broadcasts-navigation-distribute-button'}}
        <i class="euro icon"></i>
        {{t 'decide.progress.button.to-invoice'}}
      {{/link-to}}
    {{else}}
      {{#link-to 'invoice' class='ui button find-broadcasts-navigation-distribute-button'}}
        <i class="euro icon"></i>
        {{t 'decide.progress.button.to-invoice'}}
      {{/link-to}}
    {{/if}}
  </div>

  {{yield}}

  <div class="item">
    {{#if canStepForward}}
      <button class="ui right labeled icon button find-broadcasts-navigation-next" {{action 'next'}}>
        Next
        <i class="right arrow icon"></i>
      </button>
    {{else}}
      <button class="ui right labeled icon disabled button find-broadcasts-navigation-next">
        Next
        <i class="right arrow icon"></i>
      </button>
    {{/if}}
  </div>
</div>
